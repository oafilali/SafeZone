pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        disableConcurrentBuilds()
        timeout(time: 60, unit: 'MINUTES')
    }
    
    triggers {
        githubPush()
    }
    
    environment {
        // Credentials
        TEAM_EMAIL = credentials('team-email')
        MONGO_ROOT_USERNAME = credentials('mongo-root-username')
        MONGO_ROOT_PASSWORD = credentials('mongo-root-password')
        API_GATEWAY_URL = credentials('api-gateway-url')
        GITHUB_TOKEN = credentials('github-token')
        
        // SonarQube
        SONARQUBE_URL = "http://host.docker.internal:9000"
        
        // Paths
        JENKINS_SCRIPTS = './.pipeline/jenkins'
    }

    stages {
        stage('Validate') {
            steps {
                sh "${JENKINS_SCRIPTS}/validate-environment.sh"
            }
        }
        
        stage('Build') {
            steps {
                sh 'mvn clean install -DskipTests'
            }
        }
        
        stage('Test') {
            parallel {
                stage('Backend Tests') {
                    steps {
                        sh 'mvn test'
                    }
                    post {
                        always {
                            junit allowEmptyResults: true, testResults: '**/target/surefire-reports/*.xml'
                        }
                    }
                }
                stage('Frontend Tests') {
                    steps {
                        dir('buy-01-ui') {
                            sh '''
                                npm install --legacy-peer-deps
                                export CHROME_BIN=$(which chromium || which chromium-browser || echo "/usr/bin/chromium")
                                npm test -- --watch=false --browsers=ChromeHeadlessCI --code-coverage
                            '''
                        }
                    }
                }
            }
        }
        
        stage('SonarQube Analysis') {
            parallel {
                stage('Backend Analysis') {
                    steps {
                        withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                            withSonarQubeEnv('SonarQube') {
                                script {
                                    def branch = env.GIT_BRANCH?.replace('origin/', '') ?: 'main'
                                    sh "mvn sonar:sonar -Dsonar.branch.name=${branch} -Dsonar.host.url=${SONARQUBE_URL} -Dsonar.token=${SONAR_TOKEN}"
                                }
                            }
                            // Check Quality Gate immediately for backend
                            timeout(time: 5, unit: 'MINUTES') {
                                script {
                                    def qg = waitForQualityGate()
                                    if (qg.status != 'OK') {
                                        error "Backend Quality Gate failed: ${qg.status}"
                                    }
                                }
                            }
                        }
                    }
                }
                stage('Frontend Analysis') {
                    steps {
                        withCredentials([string(credentialsId: 'sonarqube-token', variable: 'SONAR_TOKEN')]) {
                            withSonarQubeEnv('SonarQube') {
                                dir('buy-01-ui') {
                                    script {
                                        def branch = env.GIT_BRANCH?.replace('origin/', '') ?: 'main'
                                        // Install sonar-scanner if not present
                                        sh '''
                                            if ! command -v sonar-scanner &> /dev/null; then
                                                npm install -g sonarqube-scanner
                                            fi
                                        '''
                                        // Run SonarQube analysis
                                        sh """
                                            npx sonarqube-scanner \
                                                -Dsonar.branch.name=${branch} \
                                                -Dsonar.host.url=${SONARQUBE_URL} \
                                                -Dsonar.token=${SONAR_TOKEN}
                                        """
                                    }
                                }
                            }
                            // Check Quality Gate immediately for frontend
                            timeout(time: 5, unit: 'MINUTES') {
                                script {
                                    def qg = waitForQualityGate()
                                    if (qg.status != 'OK') {
                                        error "Frontend Quality Gate failed: ${qg.status}"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
        
        stage('Deploy') {
            when {
                branch 'main'
            }
            steps {
                sh "${JENKINS_SCRIPTS}/build-docker-images.sh ${BUILD_NUMBER}"
                dir('.pipeline') {
                    sh '''
                        docker compose up -d mongodb zookeeper kafka \
                            service-registry api-gateway user-service product-service media-service frontend
                    '''
                }
                echo "✅ Deployed successfully"
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: '**/target/surefire-reports/**/*.xml', allowEmptyArchive: true
        }
        success {
            echo '✅ Pipeline SUCCESS'
        }
        failure {
            echo '❌ Pipeline FAILED'
        }
    }
}
